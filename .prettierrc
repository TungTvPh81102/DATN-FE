{
  "endOfLine": "auto",
  "semi": false,
  "singleQuote": true,
  "trailingComma": "es5",
  "importOrder": [
    "^(react/(.*)$)|^(react$)",
    "^(next/(.*)$)|^(next$)",
    "<THIRD_PARTY_MODULES>",

    "",
    "^types$",
    "^@/types/(.*)$|^(@/types)",
    "^@/constants/(.*)$|^(@/constants)",

    "^@/configs/(.*)$|^(@/configs)",
    "^@/lib/(.*)$",

    "^@/validations/(.*)$",
    "^@/services/(.*)$",
    "^@/hooks/(.*)$",

    "",
    "^@/components/ui/(.*)$",
    "^@/components/(.*)$",
    "^@/sections/(.*)$",

    "^@/styles/(.*)$",
    "^@/app/(.*)$",

    "",
    "^[./]"
  ],
  "importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"],
  "plugins": [
    "prettier-plugin-tailwindcss",
    "@ianvs/prettier-plugin-sort-imports"
  ]
}
